{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "polaris",
  "version": "0.1.0",
  "identifier": "com.polaris.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Polaris",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "hiddenTitle": true
      },
      {
        "label": "floating",
        "title": "Polaris - 悬浮窗",
        "url": "floating.html",
        "width": 500,
        "height": 400,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": true,
        "transparent": false,
        "visible": false,
        "center": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": null,
    "opener": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
